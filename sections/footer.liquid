<footer class="footer">

	{% if section.settings.linklist %}
		<nav>
			<ol>
				{% for link in section.settings.linklist.links -%}
					<li>{{ link.title | link_to: link.url }}</li>
				{% endfor %}
			</ol>
		</nav>
	{% endif %}

</footer>

{% stylesheet %}
.footer {
	padding: {{ settings.padding }}rem;
	min-height: 5rem;
}
{% endstylesheet %}

{% schema %}
{
	"name": "Footer",
	"settings": [
		{
			"type": "link_list",
			"id": "linklist",
			"label": "Links"
		}
	]
}
{% endschema %}