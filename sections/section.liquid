
<section 
	{% if section.settings.title != blank %}
		id={{ section.settings.title | replace: " " , "_"  }}
	{% endif %}
>

	{% if section.settings.title != blank %}
		<h1>{{ section.settings.title }}</h1>
	{% endif %}

	{% for block in section.blocks %}
		{% case block.type %}
			{% when "title" %}

				<h2>{{ block.settings.title }}</h2>

			{% when "paragraph" %}

				<div>
					{% if block.settings.header != blank %}
						<h3>{{ block.settings.header }}</h3>
					{% endif %}
					
					{{ block.settings.text }}
				</div>

			{% when "image" %}

				{{ block.settings.image | image_url: width: 300 | image_tag }}

			{% else %}<b>ERROR: Block type not found! </b>
		{% endcase %}
	{% endfor %}
</section>

{% schema %}
{
	"name": "Section",
    "settings": [
		{
			"type": "text",
			"id": "title",
			"label": "Title",
			"default": "Title"
		}
	],
	"presets": [
      {
        "name": "Section",
        "category": "Body"
      }
    ],
	"blocks": [
		{
			"type": "title",
			"name": "Title",
			"settings": [
				{
					"type": "text",
					"id": "title",
					"label": "Title",
					"default": "Title"
				}
			]
   		},
		{
			"type": "paragraph",
			"name": "Paragraph",
			"settings": [
				{
					"type": "text",
					"id": "header",
					"label": "Header",
					"default": "Header"
				},
				{
					"type": "richtext",
					"id": "text",
					"label": "text",
					"default": "<p>Paragraph<p>"
				}
			]
   		},
		{
			"type": "image",
			"name": "Image",
			"settings": [
				{
					"type": "image_picker",
					"id": "image",
					"label": "Image"
				}
			]
   		}
	]
}
{% endschema %}