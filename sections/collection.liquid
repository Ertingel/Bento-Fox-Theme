<section>

	{% if section.settings.title != blank %}
		<h2>{{ section.settings.title }}</h2>
	{% else %}
		<h2>{{ section.settings.collection.title }}</h2>
	{% endif %}

	<table>
		<thead>
			<td>Product</td>
			<td>Price</td>
		</thead>
		
		<tbody>
			{% for product in section.settings.collection.products %}
				<tr>
					<td><a href="{{ product.url }}">{{ product.title }}</a></td>
					<td>{{ product.price | money }}</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

</section>

{% schema %}
{
	"name": "Collection",
	"settings": [
		{
			"type": "text",
			"id": "title",
			"label": "Title",
			"default": "Title"
		},
		{
			"type": "collection",
			"id": "collection",
			"label": "Collection"
		}
	],
	"presets": [
      {
        "name": "Collection",
        "category": "Body"
      }
    ]
}
{% endschema %}