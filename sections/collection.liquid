
{% if section.settings.title != blank %}
	{% render 'collection' with 
		title:section.settings.title 
		products:section.settings.collection.products 
	%}
{% else %}
	{% render 'collection' with 
		title:section.settings.collection.title 
		products:section.settings.collection.products 
	%}
{% endif %}

{% schema %}
{
	"name": "Collection",
	"settings": [
		{
			"type": "text",
			"id": "title",
			"label": "Title"
		},
		{
			"type": "collection",
			"id": "collection",
			"label": "Collection"
		}
	],
	"presets": [
      {
        "name": "Collection",
        "category": "Body"
      }
    ]
}
{% endschema %}