<header class="header">
	<h1>{{ shop.name  | link_to: shop.url }}</h1>

	{% if section.settings.linklist %}
		<nav>
			<ol>
				{% for link in section.settings.linklist.links -%}
					<li>{{ link.title | link_to: link.url }}</li>
				{% endfor %}
			</ol>
		</nav>
	{% endif %}

</header>

{% stylesheet %}
.header {
	display: flex;
	flex-flow: row nowrap;
	justify-content: space-between;
	align-items: center;
	gap: 1rem;
}

.header * {
	display: flex;
	flex-flow: row nowrap;
	justify-content: space-between;
	align-items: center;
	gap: 1rem;
}
{% endstylesheet %}

{% schema %}
{
	"name": "Header",
	"settings": [
		{
			"type": "link_list",
			"id": "linklist",
			"label": "Links",
			"default": "main-menu"
		}
	]
}
{% endschema %}