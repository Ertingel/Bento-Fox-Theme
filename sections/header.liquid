<header>
	<h1>{{ shop.name  | link_to: shop.url }}</h1>

	{% if section.settings.links? %}
		<nav>
			<ol>
				{% for link in section.settings.links -%}
					<li>{{ link.title | link_to: link.url }}</li>
				{% endfor %}
			</ol>
		</nav>
	{% endif %}

</header>

{% schema %}
{
	"name": "Header",
	"settings": [
		{
			"type": "link_list",
			"id": "links",
			"label": "Links",
			"default": "main-menu"
		}
	]
}
{% endschema %}