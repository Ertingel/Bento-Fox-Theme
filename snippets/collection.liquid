
{% if collection %}
	<section id={{ title | replace: " " , "_"  }}>

		{% if section.settings.title != blank %}
			<h2>{{ title }}</h2>
		{% else %}
			<h2>{{ collection.title }}</h2>
		{% endif %}

		<table>
			<thead>
				<td>Product</td>
				<td>Price</td>
			</thead>
			
			<tbody>
				{% for product in collection.products %}
					<tr>
						<td><a href="{{ product.url }}">{{ product.title }}</a></td>
						<td>{{ product.price | money }}</td>
					</tr>
				{% endfor %}
			</tbody>
		</table>

	</section>
{% else %}
	<i>No collection selected. </i>
{% endif %}