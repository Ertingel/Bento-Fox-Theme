<h1>{{ collection.title }}</h1>

<table>
	<thead>
		<td>Product</td>
		<td>Price</td>
	</thead>
	<tbody>
		{% for product in collection.products %}
			<tr>
				<td><a href="{{ product.url }}">{{ product.title }}</a></td>
				<td>{{ product.price | money }}</td>
			</tr>
		{% endfor %}
	</tbody>
</table>