<h1>{{ blog.title }}</h1>

<ol>
	{% for article in blog.articles %}
		<li>
			<a href="{{ article.url }}">
			<h2>{{ article.title }}</h2>
			<p>{{ article.published_at | date: '%B %d, %Y' }}</p>

			<img href="{{ article.image | image_url: width: 200 }}" width="200" height="auto" />
			<div>{{ article.excerpt }}</div>
			<p>Author: {{ article.author }}</p>
			</a>
		</li>
	{% endfor %}
</ol>