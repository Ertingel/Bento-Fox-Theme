body {
	color: {{ settings.TextColor }};
	font: {{ settings.TextFont }};
	fonsize: {{ settings.TextSize }}vmin;

	background-color: {{ settings.BackgroundColor }};
}


* {
	font-size: 1em;
	margin: 0;
	padding: 0;
	box-sizing: border-box;
}

h1,h2,h3,h4,h5,h6{
	font: {{ settings.HeaderFont }};
}

h1 {
	font-size: 2em;
}

h2 {
	font-size: 1.5em;
}

h3 {
	font-size: 1.25em;
}

h4 {
	font-size: 1.125em;
}

h5 {
	font-size: 1.6em;
}

h6 {
	font-size: 1em;
}

a:link{
	text-decoration: none;
	color: {{ settings.TextColor }};
}

a:visited{
	text-decoration: none;
	color: {{ settings.TextColor }};
}

a:hover{
	text-decoration: underline;
	color: {{ settings.TextColor }};
}

a:active{
	text-decoration: underline;
	color: {{ settings.TextColor }};
}

img {
	display: block;
}

.header {
	padding: {{ settings.padding }}rem;
	
	display: flex;
	flex-flow: row nowrap;
	justify-content: space-between;
	align-items: center;
	gap: 1rem;
}

.header * {
	display: flex;
	flex-flow: row nowrap;
	justify-content: space-between;
	align-items: center;
	gap: 1rem;
}

.footer {
	padding: {{ settings.padding }}rem;
	min-height: 5rem;
}

.main {
	display: flex;
	flex-flow: column nowrap;
	align-items: stretch;
}

.main > h1, .main > h2, .main > h3, .main > h4, .main > h5, .main > h6{
	text-align: center;
}

.collection {
	display: flex;
	flex-flow: column nowrap;
	align-items: center;
}

.collection > table {
	width: min(calc(100vw - {{ settings.padding }}rem * 2), 25rem);
}

.collection > table td {
	text-align: left;
	vertical-align: center;
}

.collection > table td:last-child {
	text-align: right;
}