body {
	color: {{ settings.TextColor }};
	font: {{ settings.TextFont }};
	fonsize: {{ settings.TextSize }}vmin;

	background-color: {{ settings.BackgroundColor }};
}


* {
	font-size: 1em;
	margin: 0;
	padding: 0;
	box-sizing: border-box;
}

h1,h2,h3,h4,h5,h6{
	font: {{ settings.HeaderFont }};
}

h1 {
	font-size: 2em;
}

h2 {
	font-size: 1.75em;
}

h3 {
	font-size: 1.5em;
}

h4 {
	font-size: 1.25em;
}

h5 {
	font-size: 1.15em;
}

h6 {
	font-size: 1em;
}